  <% if flash.present?  %>
    <% flash.each do | name | %>
      <div class="flash-mail">
        <i class="material-icons close-flash">close</i>
        <p><%= name.last %></p>
      </div>
    <% end %>
  <% end %>
<main>
  <section class="col m9 s12 offset-m1">
    <div class="row">
      <ul class= "col m5 offset-m1" >
        <h2>Complete this deal</h2>
        <% if @task %>
          <p> You will have to pay before your taskee will be notified</p>
          <p>You may pay below</p>
          <% @taskee = @task.taskee.fullname %>
          <% @description = @task.description %>
          <% @amount = @task.amount %>
          <li><strong><%= label_tag "Taskee's name" %></strong><%= text_field_tag("name", @taskee, disabled: true) %></li>
          <li><strong><%= label_tag "Task Description" %></strong><%= text_field_tag("description", @description, disabled: true ) %></li>
            <% unless @task.paid? %>
              <%= render "pay" %>
            <% end %>
        <% end %>
      </ul>
    </div>
  </section>
</main>
