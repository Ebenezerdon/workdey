<%= render 'partials/sidebar_dashboard' %>
<section class="main container">
  <div class="row">
    <div class="col s7 offset-s3">
      <%= form_tag "/references/endorse", method: "post" do %>
        <div class="row">
          <h4 class="col s12">Endorse <%= @taskee %> for the following skill set</h4>
          <div class="col s12">
            <% @taskee_skillsets.each do |skillset| %>
            <p>
              <%= check_box_tag 'references[skillsets][]', skillset, false, id: "skillset_#{skillset}" %>
              <%= label_tag "skillset_#{skillset}", skillset %>
            </p>
            <% end %>
          </div>
        </div>
        <div class="row">
          <h4 class="col s12">State your relationship with <%= @taskee %></h4>
          <div class="input-field col s11">
            <%= select_tag :relationship, options_for_select(["Professional: I have worked with #{@taskee}",
                 "Education: I know #{@taskee} from an academic background",
                 "Personal: I have a personal relationship with #{@taskee}"]) %>
          </div>
        </div>
        <div class="row">
          <h4 class="col s12">Write a recommendation</h4>
          <div class="input-field col s11">
            <%= text_field_tag :recommendation, nil,
              placeholder: "Ex. #{@reference.taskee.firstname} is very detail-oriented and produced great results for the company...", class: "materialize-textarea" %>
          </div>
        </div>
        <%= hidden_field_tag 'email', "#{@reference.email}" %>
        <button class="btn waves-effect waves-light" type="submit">Send
          <i class="material-icons right">send</i>
        </button>
      <% end %>
    </div>
  </div>
</section>
