<main>
  <!-- <div class="col m4">
    <%= render "partials/sidebar_dashboard" %>
  </div> -->
  <div class="container ">
    <div class="container">
    <h3>Create New task</h3>
    <div class="col m12">
       <%= form_for @task do |f| %>
        <%= render "partials/error_msg", object:  @task%>
      <div class="row">
          <div class="input-field col m6">
            <i class="material-icons prefix">edit_mode</i>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        <div class=" input-field col m6">
          <i class="material-icons prefix">credit_card</i>
          <%= f.label :price %>
          <%= f.text_field :price, class: "form-control" %>
        </div>
        </div>
        <div class="row">
          <div class="input-field col m6">
            <i class="material-icons prefix">perm_contact_calendar</i>
            <%= f.label :start_time%>
             <%= f.date_field :start_date, class: "datepicker", placeholder: "Start Date", required: true %>
          </div>
          <div class="input-field col m6">
            <i class="material-icons prefix">perm_contact_calendar</i>
            <%= f.label :end_time%>
             <%= f.date_field :end_date, class: "datepicker", placeholder: "End Date", required: true %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col m6">
            <i class="material-icons prefix">schedule</i>
            <%= f.label :time%>
             <%= f.text_field "time", class: "timepicker", placeholder: "Start Time" %>
          </div>
          <div class="input-field col m6">
            <i class="material-icons prefix">my_location</i>
            <%= f.label :location%>
             <%= f.text_field "locaton", class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col m6">
             <%= f.text_area "description", class: "form-control", placeholder: "Enter the description of the task here" %>
          </div>
          <!-- <i class="material-icons prefix">list</i> -->
          <div class="input-field col m5 offset-m1">
            <!-- <i class="material-icons prefix">list</i> -->
            <%= f.label :skillsets%>

            <input type="text" class="typeahead" name="skillsets" data-role="materialtags"/>
          </div>

        </div>
        <div class="row">
          <div class="col m7 offset-m5">
            <%= f.submit "Create Task", class: "btn waves-effect waves-light"%>
            <!-- <button class="btn waves-effect waves-light" type="submit">Submit
              <i class="material-icons right">send</i>
            </button> -->
          </div>
        </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</main>
