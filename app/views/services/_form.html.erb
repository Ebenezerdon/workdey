<div class="row container submit-request-row">
  <div class="col m7 submit-request-column">
    <%= form_for :service, :url => { :action => "create" }, method: "post", :html => { class: "col s12 z-depth-6" } do |f| %>
      <% if notice %>
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Error</span>
          <h4><%= notice.count %>
            prohibited this service request from being saved:</h4>

          <ul>
            <% notice.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :title, class: "validate", placeholder:"Title", required: true  %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.text_area :description, class: "validate", placeholder:"Description", required: true  %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s5">
          <%= f.select :skillset_id, options_from_collection_for_select(@skillsets, "id", "name"), class: "validate", prompt: "Skillset", required: true %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">today</i>
          <%= f.text_field :start_date, class: "datepicker col s2 validate", placeholder: "Start Date", required: true %>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">today</i>
          <%= f.text_field :end_date, class: "datepicker col s2 validate", placeholder: "End Date", required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <%= f.submit 'CREATE REQUEST', class: 'btn', id: 'commit' do %>
            <i class="material-icons right">send</i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
